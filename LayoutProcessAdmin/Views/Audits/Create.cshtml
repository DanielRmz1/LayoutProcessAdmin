{
    Text = "Daily",
    Value = "d"
},
new SelectListItem()
{
    Text = "Weekly",
    Value = "w"
},
new SelectListItem()
{
    Text = "Monthly",
    Value = "m"
},
new SelectListItem()
{
    Text = "15 Days",
