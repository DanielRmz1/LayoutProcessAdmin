@model IEnumerable<LayoutProcessAdmin.Models.Checking.Checklist>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-xl-12">
        <div class="breadcrumb-holder">
            <h1 class="main-title float-left">My Checklists</h1>
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item">Users</li>
                <li class="breadcrumb-item active">Index</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>



<div class="card">
    <div class="card-header">
        @Html.ActionLink("Create Checklist", "Create", null, new { role = "button", @class = "btn btn-success" })
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped" id="UsersTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>
                        @Html.DisplayNameFor(model => model.chr_Clave)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.chr_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.chr_Description)
                    </th>
                    <th>
                        Questions Count
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.int_IdList
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.chr_Clave)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.chr_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.chr_Description)
                        </td>
                        <td>
                            @item.Questions.Count
                        </td>
                        <td>
                            <div class="row">
                                <div class="col-12 col-md-12 col-sm-12 col-lg-12 col-xl-4">
                                    <a href="@Url.Action("Edit", "Checklists", new { id = item.int_IdList })" role="button" class="btn btn-warning btn-sm"><i class="fa fa-pen"></i></a>
                                </div>
                                <div class="col-12 col-md-12 col-sm-12 col-lg-12 col-xl-4">
                                    <a href="@Url.Action("Attend", "Checklists", new { id = item.int_IdList})" role="button" class="btn btn-primary btn-sm disabled"><i class="fa fa-info-circle"></i></a>
                                </div>
                                <div class="col-12 col-md-12 col-sm-12 col-lg-12 col-xl-4">
                                    <a href="#" role="button" class="btn btn-danger btn-sm" onclick="ShowDeleteModal('@item.int_IdList', '@item.chr_Name', '@item.chr_Description')"><i class="fa fa-minus-circle"></i></a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"> <i class="fa fa-question-circle"></i> Are you sure you want to delete this?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>Checklist: <span id="lblUsername"></span></h5>
                <h5>Description: </h5><span id="lblEmail"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>

                @using (Html.BeginForm("Delete", "Checklists", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.TextBox("id", "id", new { Hidden = "hidden" })
                    <button type="submit" class="btn btn-danger">Delete</button>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script>

        function ShowDeleteModal(id, userName, email) {
            $('#deleteModal .modal-body #lblUsername').html(" " + userName);
            $('#deleteModal .modal-body #lblEmail').html(" " + email);
            $('#deleteModal .modal-footer #id').val(id);
            $('#deleteModal').modal('show');
        }

        $(document).ready(function () {
            $('#UsersTable').DataTable({
                "scrollY": "400px"
            });
        });
        
    </script>
}