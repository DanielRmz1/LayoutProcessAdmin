                                    @Html.DropDownListFor(model => model.SelectedUsers, users, "Select a Option", new { @class = "form-control select2", multiple = "multiple" })
                                    @Html.ValidationMessageFor(model => model.SelectedUsers, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div><br />
