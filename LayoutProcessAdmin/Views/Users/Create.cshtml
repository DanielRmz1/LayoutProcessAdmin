@model LayoutProcessAdmin.Models.Account.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{

    <link href="~/plugins/select2/css/select2.min.css" rel="stylesheet" />

}

<div class="row">
    <div class="col-xl-12">
        <div class="breadcrumb-holder">
            <h1 class="main-title float-left">Users Managment - Register a User</h1>
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item">Users</li>
                <li class="breadcrumb-item active">Register</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-xl-6 col-12 offset-xl-3 offset-lg-0 offset-md-0">
        @using (Html.BeginForm())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="text-success"><i class="fa fa-clipboard-list" style="font-size:20px;"></i> New Checklist</h3>
                </div>
                <div class="card-body">

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-xl-6 col-12 col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.chr_Clave, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        @Html.EditorFor(model => model.chr_Clave, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.chr_Clave, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-10 col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserRole, htmlAttributes: new { @class = "control-label" })
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-12">
                                        @Html.DropDownListFor(model => model.UserRole, Model.Roles, "Select a Option", new { @class = "form-control select2" })
                                        @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xl-6 col-12 col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.chr_Name, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        @Html.EditorFor(model => model.chr_Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.chr_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-12 col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.chr_LastName, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        @Html.EditorFor(model => model.chr_LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.chr_LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.chr_Email, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        @Html.EditorFor(model => model.chr_Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.chr_Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xl-6 col-12 col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.chr_Password, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        @Html.EditorFor(model => model.chr_Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.chr_Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-12 col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.chr_ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        @Html.EditorFor(model => model.chr_ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.chr_ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xl-6 col-12 col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.chr_Phone, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        @Html.EditorFor(model => model.chr_Phone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.chr_Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-6">
                            <a href="@Url.Action("Index", "Users")" role="button" class="btn btn-warning">
                                <i class="fa fa-long-arrow-alt-left"></i> Back to List
                            </a>
                        </div>
                        <div style="margin-left: auto;">
                            <div class="form-group" style="">
                                <div class="col-md-offset-2 col-md-4 col-sm-12">
                                    <input type="submit" value="Create" class="btn btn-success btn-lg" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/plugins/select2/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });

        $(window).resize(function () {
            $('.select2').select2();
        });
    </script>
}
