<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    <!-- Favicon -->
    <link rel="shortcut icon" src="@Url.Content("~/favicon.ico")" />

    <!-- Bootstrap CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome CSS -->
    <link href="~/Content/font-awesome/css/all.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/css/style.css" rel="stylesheet" />

    @RenderSection("css", required: false)

</head>

<body class="adminbody">

    <div id="main">

        <!-- top bar navigation -->
        <div class="headerbar">

            <!-- LOGO -->
            <div class="headerbar-left" style="background-color:#00264d;">
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="@Url.Content("~/Images/layers.png")" alt="logo"/> <span>ListLayer</span>
                </a>
            </div>

            <nav class="navbar-custom" style="background-color:#00264d;">
                <ul class="list-inline float-right mb-0">
                    <li class="list-inline-item dropdown notif">
                        <a class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            Welcome Admin!
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown ">
                            <!-- item-->
                            <div class="dropdown-item noti-title">
                                <h5 class="text-overflow"><small>Hello, admin</small> </h5>
                            </div>
                            <!-- item-->
                            <a href="pro-profile.html" class="dropdown-item notify-item">
                                <i class="fa fa-user"></i> <span>Profile</span>
                            </a>
                            <!-- item-->

                            <a href="@Url.Action("Logout", "Users")" class="dropdown-item notify-item" role="button">
                                <i class="fa fa-power-off"></i> <span>Logout</span>
                            </a>
                        </div>
                    </li>
                </ul>

                <ul class="list-inline menu-left mb-0">
                    <li class="float-left">
                        <button class="button-menu-mobile open-left" id="SideBarToggle">
                            <i class="fa fa-fw fa-bars"></i>
                        </button>
                    </li>
                </ul>
            </nav>

        </div>
        <!-- End Navigation -->

        <!-- Left Sidebar -->
        <div class="left main-sidebar">

            <div class="sidebar-inner leftscroll">

                <div id="sidebar-menu">

                    <ul>
                        <li class="submenu">
                            <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i><span> Inicio </span> </a>
                        </li>

                        <li class="submenu">
                            <a href="@Url.Action("Index", "Home")"><i class="fas fa-clipboard-check"></i><span> Checklists </span> </a>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fas fa-address-book"></i><span>Accounts</span> <i class="fas fa-angle-right menu-arrow"></i></a>
                                <ul class="list-unstyled">
                                    <li><a href="@Url.Action("Index", "Users")">Users</a></li>
                                    <li><a href="@Url.Action("Index", "Roles")">Roles</a></li>
                                </ul>
                        </li>

                        <li class="submenu">
                            <a href="@Url.Action("About", "Home")"><i class="fas fa-info"></i><span> About </span> </a>
                        </li>

                        <li class="submenu">
                            <a href="@Url.Action("Contact", "Home")"><i class="fas fa-envelope"></i><span> Contact </span> </a>
                        </li>
                    </ul>

                    <div class="clearfix"></div>

                </div>

                <div class="clearfix"></div>

            </div>

        </div>
        <!-- End Sidebar -->

        <div class="content-page">

            <!-- Start content -->
            <div class="content">

                <div class="container-fluid">
                    @RenderBody()
                </div>

            </div>
            <!-- END content -->

        </div>
        <!-- END content-page -->

        <footer class="footer">
            <span class="text-right">
                Copyright <a target="_blank" href="http://www.calisis.com">http://www.calisis.com</a> &reg;
            </span>
        </footer>

    </div>
    <!-- END main -->

    <script src="~/Scripts/Plugins/js/modernizr.min.js"></script>
    <script src="~/Scripts/Plugins/js/jquery.min.js"></script>
    <script src="~/Scripts/Plugins/js/moment.min.js"></script>

    <script src="~/Scripts/Plugins/js/popper.min.js"></script>
    <script src="~/Scripts/Plugins/js/bootstrap.min.js"></script>

    <script src="~/Scripts/Plugins/js/detect.js"></script>
    <script src="~/Scripts/Plugins/js/fastclick.js"></script>
    <script src="~/Scripts/Plugins/js/jquery.blockUI.js"></script>
    <script src="~/Scripts/Plugins/js/jquery.nicescroll.js"></script>

    <!-- App js -->
    <script src="~/Scripts/Plugins/js/pikeadmin.js"></script>

    <script>
        $(function () {
            $('#SideBarToggle').trigger('click');
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>

